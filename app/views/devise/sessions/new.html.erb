<div class="pad5"><h2>Sign in</h2></div>
<div class="padT">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html:{ class: 'form-horizontal box_large'}) do |f| %>
  <div class="padT">
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :remember_me, as: :boolean %>

  <div class="form-actionsRedo span12">
    <div class="span1">
       <%= f.submit "Sign in", class: "btn btn-primary" %>
    </div>
    <div class="span1">
      <%= render "devise/shared/links" %>

    </div>
   
  </div>
<% end %>


</div>
