<div class="pad5"><h2>Edit <%= resource_name.to_s.humanize %></h2></div>
<div class="box_large">
  <div class="row">
    <div class="span5">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
        <%= f.error_notification %>
        <div class="padT">
          <%= f.input :name %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation, label:"New Password Confirmation", autocomplete: "off" %>
          <%= f.input :current_password %>
        </div>
        <div class="fRight">
          <div class="form-actionsRedo"><%= f.submit "Update", class: "btn btn-primary" %></div>
        </div>
          <%# link_to "Back", :back, class: "btn btn-info", :style=>"color:white" %>
      <% end %>
    </div>
    <div class="span7">
      <p>
      <h3>Cancel my account</h3>
        <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class =>"btn btn-danger" %>.
      </p>
    </div>
</div>

</div>



