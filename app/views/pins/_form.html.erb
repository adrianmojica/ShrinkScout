<div class="">
  <%= simple_form_for(@pin, html: { class: "form-horizontal box_large"}) do |f| %>
  <%= f.error_notification %>
  <div class="padT">
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>
  
  	<%= f.input :image, label: "Upload an image" %>
    <%= f.input :description, as: :text, input_html: { rows:"3" } %>

    <%= f.input :address %>
  </div>
    <div class="form-actions"> <%= f.button :submit, class: "btn btn-primary" %> </div>
  </div>
<% end %>
</div>